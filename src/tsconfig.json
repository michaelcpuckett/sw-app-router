{
  "compilerOptions": {
    "strict": true,
    "module": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "WebWorker", "DOM.Iterable"],
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "paths": {
      "app/*": ["./app/*"],
      "components/*": ["./components/*"],
      "utils/*": ["./utils/*"],
      "@express-worker/router*": ["../@express-worker/router/*"]
    }
  },
  "include": ["./**/*"]
}
